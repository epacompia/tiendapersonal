@model TipoCuenta

@{
    ViewData["title"] = "Crear Tipo Cuenta";
}


<h1>Crear tipo de Cuenta</h1>
<h5>El tipo de cuenta se refiere a como podemos agrupar cuentas 
    Ejemplo: Prestamos,tarjetas de creditos, etc</h5>


    <div asp-validation-summary="All" class="text-danger"></div>


<form asp-controller="TiposCuentas" asp-action="Crear">
    <div class="mb-3">
        <label asp-for="Nombre" class="form-label">Nombre</label>
        <input type="text" id="Nombre" name="Nombre" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>
</form>
